{
    "name": "mcp/sdk",
    "description": "Model Context Protocol SDK for Client and Server applications in PHP",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Christopher Hertel",
            "email": "mail@christopher-hertel.de"
        },
        {
            "name": "Kyrian Obikwelu",
            "email": "koshnawaza@gmail.com"
        },
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-fileinfo": "*",
        "opis/json-schema": "^2.4",
        "phpdocumentor/reflection-docblock": "^5.6",
        "psr/container": "^2.0",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0",
        "symfony/finder": "^6.4 || ^7.3",
        "symfony/uid": "^6.4 || ^7.3"
    },
    "require-dev": {
        "captainhook/captainhook-phar": "^5.25",
        "ergebnis/composer-normalize": "^2.48",
        "ergebnis/license": "^2.7",
        "ergebnis/php-cs-fixer-config": "^6.54",
        "php-cs-fixer/shim": "^3.84",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.5",
        "psr/cache": "^3.0",
        "rector/rector": "^2.1",
        "symfony/console": "^6.4 || ^7.3",
        "symfony/process": "^6.4 || ^7.3"
    },
    "autoload": {
        "psr-4": {
            "Mcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mcp\\Example\\CombinedHttpExample\\": "examples/04-combined-registration-http/",
            "Mcp\\Example\\ComplexSchemaHttpExample\\": "examples/07-complex-tool-schema-http/",
            "Mcp\\Example\\DependenciesStdioExample\\": "examples/06-custom-dependencies-stdio/",
            "Mcp\\Example\\HttpUserProfileExample\\": "examples/02-discovery-http-userprofile/",
            "Mcp\\Example\\ManualStdioExample\\": "examples/03-manual-registration-stdio/",
            "Mcp\\Example\\SchemaShowcaseExample\\": "examples/08-schema-showcase-streamable/",
            "Mcp\\Example\\StdioCalculatorExample\\": "examples/01-discovery-stdio-calculator/",
            "Mcp\\Example\\StdioEnvVariables\\": "examples/05-stdio-env-variables/",
            "Mcp\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "captainhook/captainhook-phar": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "@composer normalize",
            "vendor/bin/captainhook install -f"
        ],
        "post-update-cmd": [
            "@composer normalize",
            "vendor/bin/captainhook install -f"
        ],
        "ci": "@ci-stable",
        "ci-lowest": [
            "@deps-low",
            "@cs",
            "@phpstan",
            "@tests"
        ],
        "ci-stable": [
            "@deps-stable",
            "@cs",
            "@phpstan",
            "@tests"
        ],
        "coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html=coverage",
        "cs": "vendor/bin/php-cs-fixer fix --diff --verbose",
        "deps-low": "composer update --prefer-lowest --prefer-stable --no-interaction",
        "deps-stable": "composer update --prefer-stable --no-interaction",
        "phpstan": "vendor/bin/phpstan --memory-limit=-1",
        "rector": "vendor/bin/rector process",
        "tests": "vendor/bin/phpunit"
    }
}
